{{!< master}}
{{#contentFor "bodyAttr"}}ng-controller="AboutController"{{/contentFor}}
<section class="detail-we-are">
    <div class="back" ng-class="homeBack"></div>
    <div class="wrap">
        <div class="about-box">
            <h2 class="about-h1" translate="aboutlove"></h2>
            <div class="about-center">
                <p translate="aboutlove_one">
                </p>
                <p translate="aboutlove_two">
                </p>
                <p translate="aboutlove_three">
                </p>
                <p translate="aboutlove_four">
                </p>
            </div>
        </div>
    </div>
</section>
<section class="our-team">
    <div class="wrap">
        <h2 translate="our_team"></h2>
        <h3 translate="welove"></h3>
        <ul class="clearfix">
            <li class="profile" ng-repeat="item in person">
                <a ng-href="#{{angular 'item.first_name'}}" class="clearfix">
                    <figure>
                        <img class="img-circle img-responsive"
                             ng-src="{{angular 'item.photo'}}"/>
                    </figure>
                </a>
                <h4 ng-bind="item.first_name"></h4>
                <q ng-bind="item.description" class="description"></q>
            </li>
        </ul>
    </div>
</section>
<section class="our-team our-partners">
    <div class="wrap">
        <h2>Our Partners</h2>
        <h3>We work closely with a number of trusted partners who specialise in branding and front and back end development.</h3>
        <ul class="clearfix">
            <li class="profile" ng-repeat="item in person">
                <a ng-href="#{{angular 'item.first_name'}}" class="clearfix">
                    <figure>
                        <img class="img-circle img-responsive"
                             ng-src="{{angular 'item.photo'}}"/>
                    </figure>
                </a>
                <h4 ng-bind="item.first_name"></h4>
                <q ng-bind="item.description" class="description"></q>
            </li>
        </ul>
    </div>
</section>
<section id="flickrfeed" class="flickr-feed">
    <ul>
        <li ng-repeat="item in photos">
            <a ng-href="{{angular 'item.link'}}" target="_blank">
                <img ng-src="{{angular 'item.media.m'}}" ng-alt="{{angular 'item.title'}}"
                     ng-title="{{angular 'item.title'}}">
            </a>
        </li>
    </ul>
</section>