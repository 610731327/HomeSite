{{!< master}}
{{#contentFor "bodyAttr"}}ng-controller="DBController"{{/contentFor}}
<!--<table align="center" border="0" width="400px" height="500px">-->

    <table align="center" border="0" cellspacing="15px">
        <tr>
            <td align="center">
                <label style="color: blue">Database management.</label>
            </td>
        </tr>

        <form  ng-submit="queryCollection();" method="" action="" novalidate="novalidate" role="form" name="queryForm">
            <tr>
                <td>
                    <label ng-bind="message" style="color:red"></label>
                </td>
            </tr>
            <tr>
                <td>
                    <label>Collectionï¼š</label>
                </td>
                <td>
                    <select  ng-options="collection.name for collection in collections" ng-model="collectionName">
                        <option value="">-- choose collection --</option>
                    </select>
                </td>
                <td>
                    <button name="submit" type="submit" ng-click="submitted=true" ng-disabled="loading">query</button>
                </td>
            </tr>
        </form>

        <form  ng-submit="saveCollection();" method="" action="" novalidate="novalidate" role="form" name="saveForm">
            <tr>
                <td>
                    <textarea rows="15" cols="80" ng-model="collectionContent"></textarea>
                </td>
            </tr>
            <tr>
                <td>
                    <label ng-bind="saveMessage" style="color:red"></label>
                </td>
                <td  align="center">
                    <button name="submit" type="submit" ng-click="submitted=true" ng-disabled="loading">save</button>
                </td>
            </tr>
        </form>

    </table>