<!DOCTYPE html>
<html data-app="erealm">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" >
    <title>Erealm Info & Tech Sdn Bhd</title>
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="author" href="humans.txt">
    <!-- build:css /stylesheets/libs.min.css -->
    <link rel="stylesheet" href="/stylesheets/libs/bootstrap.min.css" type="text/css"/>
    <link rel="stylesheet" href="/stylesheets/libs/font-awesome.min.css" type="text/css"/>
    <link rel="stylesheet" href="/stylesheets/libs/reset.css" type="text/css"/>
    <!-- endbuild -->
    <!--build:css/stylesheets/tems-->

    <!-- build:css /stylesheets/app.min.css -->
    <link rel="stylesheet" href="/stylesheets/app.less" type="text/less"/>
    <script src="/javascripts/debug/less.min.js" type="text/javascript"></script>

    <!-- endbuild -->
    <link rel="stylesheet" href="/stylesheets/libs/myfont.css" type="text/css" />

</head>
<body {{{block "bodyAttr"}}} scroll>
<header role="banner" ng-click="$spMenu.hide()">
    <div class="wrap">
        <div class="logo-mark"><a href="/"></a></div>
        <section class="intro">
            <span translate="subtittle"></span>
            <h1 translate="maintittle"></h1>
        </section>
    </div>
    <a href="https://github.com/Erealm-Tech" class="git-fock" target="_blank">
        <img src="/images/forkme_right_orange.png" alt="fork me on github">
    </a>
</header>
<span class="pos_right">
    <div class="btn-group">
        <button type="button" class="btn btn-default " translate="language"></button>
        <button type="button" class="btn btn-default  dropdown-toggle" data-toggle="dropdown">
            <span class="caret"></span>
            <span class="sr-only">Toggle Dropdown</span>
        </button>
        <ul class="dropdown-menu" role="menu">
            <li><a  href="#" ng-click="changeLanguage('cn')">简体中文</a></li>
            <li class="divider"></li>
            <li><a  href="#" ng-click="changeLanguage('en')">English</a></li>
        </ul>
    </div>
 </span>
<div class="nav_container" >
    <nav ng-class="{fixed: showFixedHeader}">
        <div class="wrap">
            <div class="sub-logo-mark"><a href="/"></a></div>
            <div class="nav-link fa fa-bars" ng-click="$spMenu.toggle()"></div>
            <ul id="navslide">
                <li ng-class="{active: currentPage == 'home-page'}"><a href="/" translate="home"></a></li>
                <li ng-class="{active: currentPage == 'work-page'}"><a href="/work" translate="work"></a></li>
                <li ng-class="{active: currentPage == 'about-page'}"><a href="/about" translate="about"></a></li>
                <li ng-class="{active: currentPage == 'contact-page'}"><a href="/contact" translate="contact"></a></li>
           </ul>
        </div>
    </nav>
</div>
<div id="sp-nav" class="page-menu-slide">
    <ul class="nav-slide">
        <li><a href="/" translate="home"></a></li>
        <li><a href="/work" translate="work"></a></li>
        <li><a href="/about" translate="about"></a></li>
        <li><a href="/contact" translate="contact"></a></li>
    </ul>
</div>
<div class="content" ng-click="$spMenu.hide()">
    {{{body}}}
</div>
<footer role="contentinfo">
    <div class="contact wrap">
        <h2 translate="say.hello"></h2>
        <p translate="say.content"></p>
        <ul>
            <li><a href="https://twitter.com/erealmtech" class="circle_icon" title="Follow us on Twitter" target="_blank"><span class="fa fa-twitter"></span></a></li>
            <li><a href="mailto:hello@erealm.com.my" class="circle_icon" title="Send us an email - hello@erealm.com.my"><span class="fa fa-envelope"></span></a></li>
            <li class="last end"><a href="project" class="circle_icon" title="Submit a Project Plan"><span class="fa fa-send"></span></a></li>
        </ul>
    </div>
    <div class="copyright">
        <p translate="copyright"></p>
        <p><span translate="powerby"></span><a href="http://www.erealm.com.my" target="_blank">Erealm</a> @ 2014.</p>
    </div>
</footer>
<!-- build:js /javascripts/libs.min.js -->
<script src="/javascripts/libs/angular.min.js"></script>
<script src="/javascripts/libs/jquery.min.js"></script>
<script src="/javascripts/libs/plugins/angular-cookies.min.js"></script>
<script src="/javascripts/libs/plugins/angular-translate.min.js"></script>
<script src="/javascripts/libs/plugins/angular-translate-loader-url.min.js"></script>
<script src="/javascripts/libs/plugins/angular-translate-storage-cookie.min.js"></script>
<script src="/javascripts/libs/plugins/storage-local.js"></script>
<script src="/javascripts/libs/plugins/ui-bootstrap-tpls.min.js"></script>
<script src="/javascripts/libs/plugins/ng-mobile-menu.min.js"></script>
<script src="/javascripts/libs/plugins/bootstrap.min.js"></script>
<script src="http://127.0.0.1:35729/livereload.js" cache="false"></script>
<!-- endbuild -->
<!-- build:js /javascripts/app.min.js -->
<script src="/javascripts/erealm.js"></script>
<script src="/javascripts/clients.js"></script>
<script src="/javascripts/app/homeController.js"></script>
<script src="/javascripts/app/contactController.js"></script>
<script src="/javascripts/app/aboutController.js"></script>
<script src="/javascripts/app/workController.js"></script>
<script src="/javascripts/app/projectController.js"></script>
<script src="/javascripts/app/dbController.js"></script>
<!-- endbuild -->
<script src="http://maps.google.com/maps/api/js?sensor=false"></script>
<script>
    angular.element(document).ready(function() {
        // Launch jdk module. Here we go!
        var id = angular.element(document.querySelector('html')).attr('data-app');
        console.log('booting angular app: ' + id);
        angular.bootstrap(document, [id]);
    });

    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-54177255-1', 'auto');
    ga('send', 'pageview');

</script>
</body>
</html>