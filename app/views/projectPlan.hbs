{{!< master}}
{{#contentFor "bodyAttr"}}ng-controller="ProjectController"{{/contentFor}}
<div class="send-project">
    <div class="project-wrap">
        <h2 translate="tell_us"></h2>
        <form ng-submit="sendMessage();" method="" action="" novalidate="novalidate" role="form" name="form">
            <p class="info contact-center" ng-bind="errorMessage" translate="make_sure"></p>
            <fieldset>
                <div class="form-group left">
                    <h1 translate="your_details"></h1>
                    <input type="text" class="form-control" name="name" ng-maxlength="20" ng-class="{error: (form.name.$dirty || submitted) && form.name.$invalid}" ng-model="name" title="Enter your name" required="required" ng-attr-placeholder="{{angular '\'your_name\'| translate'}}"><br>
                    <input type="email" class="form-control" name="email" ng-maxlength="50" ng-class="{error: (form.email.$dirty || submitted) && form.email.$invalid}" type="email" ng-model="email" title="Enter your email" required="required" ng-attr-placeholder="{{angular '\'your_email\'| translate'}}">
                </div>
                <div class="form-group right">
                    <h1>&nbsp;</h1>
                    <input type="text" class="form-control" name="company" ng-maxlength="20" ng-class="{error: (form.name.$dirty || submitted) && form.name.$invalid}" ng-model="company" title="Enter your name" required="required" ng-attr-placeholder="{{angular '\'your_company\'| translate'}}"><br>
                    <input type="text" class="form-control" name="telephone" ng-maxlength="50" ng-class="{error: (form.email.$dirty || submitted) && form.email.$invalid}" type="email" ng-model="telephone" title="Enter your email" required="required" ng-attr-placeholder="{{angular '\'your_telephone\'| translate'}}">
                </div>
            </fieldset>
            <fieldset>
                <div class="form-group left">
                    <h1 translate="pro_type"></h1>
                    <input type="text" class="form-control" name="type" ng-maxlength="20" ng-class="{error: (form.name.$dirty || submitted) && form.name.$invalid}" ng-model="type" title="Enter your name" required="required" ng-attr-placeholder="{{angular '\'project_type\'| translate'}}"><br>
                </div>
                <div class="form-group right">
                    <h1 translate="timeline"></h1>
                    <input type="text" class="form-control" name="start" ng-maxlength="20" ng-class="{error: (form.name.$dirty || submitted) && form.name.$invalid}" ng-model="start" title="Enter your name" required="required" ng-attr-placeholder="{{angular '\'start_date\'| translate'}}"><br>
                    <input type="text" class="form-control" name="deadline" ng-maxlength="20" ng-class="{error: (form.name.$dirty || submitted) && form.name.$invalid}" ng-model="deadline" title="Enter your name" required="required" ng-attr-placeholder="{{angular '\'deadline\'| translate'}}"><br>
                </div>
            </fieldset>
            <fieldset>
                <div class="form-group left">
                    <h1 translate="brief_description"></h1>
                    <textarea name="message" class="form-control" ng-class="{error: (form.message.$dirty || submitted) && form.message.$invalid}"
                              ng-model="message" title="Enter your message" ng-maxlength="300" required="required" ng-attr-placeholder="{{angular '\'pop_message\'| translate'}}"></textarea>
                </div>
                <div class="form-group right">
                    <h1 translate="budget"></h1>
                    <input type="text" class="form-control" name="budget" ng-maxlength="20" ng-class="{error: (form.name.$dirty || submitted) && form.name.$invalid}" ng-model="budget" title="Enter your name" required="required" ng-attr-placeholder="{{angular '\'budget\'| translate'}}"><br>
                </div>
            </fieldset>
        <button id="planner-submit" class="planner-submit" name="submit" type="submit" ng-click="submitted=true" ng-disabled="loading" translate="send_message"></button>
        </form>
    </div>
</div>


